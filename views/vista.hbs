{{#if user}}  

    <div class="form-group">

        <label>Bievenido! {{user.username}}</label>

        <div id="user-profile-2" class="user-profile">
                <div class="tabbable">
                    <ul class="nav nav-tabs padding-18">
                        <li class="active">
                            <a data-toggle="tab" href="#home">
                                <i class="green ace-icon fa fa-user bigger-120"></i>
                                Profile
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content no-border padding-24">
                        <div id="home" class="tab-pane in active">

                            <div class="row">

                                <div class="col-xs-12 col-sm-3 center">
                                    <span class="profile-picture">
                                        <img class="editable img-responsive" alt=" Avatar" id="avatar2" src={{{user.foto}}}>
                                    </span>

                                    <div class="space space-4"></div>

                                </div><!-- /.col -->

                                <div class="col-xs-12 col-sm-9">


                                    <div class="profile-user-info">
                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Nombre Completo </div>

                                            <div class="profile-info-value">
                                                <span>{{user.username}}</span>
                                            </div>
                                        </div>
                                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Email </div>

                                            <div class="profile-info-value">
                                                <span>{{user.email}}</span>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="hr hr-8 dotted"></div>

                                    <div class="profile-user-info"></div>
                    
                                </div><!-- /.col -->

                            </div><!-- /.row -->

                        </div><!-- /#home -->
                    </div>
            
                </div>
        </div>

        <form action="/logout" method="get" class="form-horizontal" role="form">
            <div class="form-group last" style="margin-bottom:0px;">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="hidden" name="form" value="1" />
                <button type="submit" class="btn btn-success btn-sm">
                Desloguearse
                </button>
            </div>
            </div>
        </form>

    </div>
{{else}}

    <div class="form-group">
        <label>Usuario no Logeado</label>
    </div>

{{/if}}

<p>Vista de Productos</p>
{{#if products}}
    <div class="container">
        <div class="row" id="search">

            <form id="search-form" action="nombre/nombre?" method="GET" enctype="multipart/form-data" role="form">
                <div class="form-group col-xs-9">
                    <input class="form-control" type="text" placeholder="Filtrar por Nombre" name="nombre"/>
                </div>
                <div class="form-group col-xs-3">
                    <input type="hidden" name="form" value="1" />
                    <button type="submit" class="btn btn-block btn-primary">Filtrar por Nombre</button>
                </div>
            </form>

            <form id="search-form" action="codigo/codigo?" method="GET" enctype="multipart/form-data" role="form">
                <div class="form-group col-xs-9">
                    <input class="form-control" type="text" placeholder="Filtrar por Código" name="codigo"/>
                </div>
                <div class="form-group col-xs-3">
                    <input type="hidden" name="form" value="1" />
                    <button type="submit" class="btn btn-block btn-primary">Filtrar por Código</button>
                </div>
            </form>

            <form id="search-form" action="productos/precio/precioInferior/precioSuperior?" method="GET" enctype="multipart/form-data" role="form">
                <div class="range-filter">
                    <div class="price-controls">
                        Rango Superior <input class="min-price" type="text" name="precioSuperior" >
                        Rango Inferior <input class="max-price" type="text" name="precioInferior" >
                    </div>
                    <div class="form-group col-xs-3">
                        <input type="hidden" name="form" value="1" />
                        <button type="submit" class="btn btn-block btn-primary">Filtrar por Precio</button>
                    </div>
                </div>
            </form>

            <form id="search-form" action="productos/stock/stockInferior/:stockSuperior?" method="GET" enctype="multipart/form-data" role="form">
                <div class="range-filter">
                    <div class="price-controls">
                        Rango Superior <input class="min-price" type="text" name="stockSuperior">
                        Rango Inferior <input class="max-price" type="text" name="stockInferior">
                    </div>
                    <div class="form-group col-xs-3">
                        <input type="hidden" name="form" value="1" />
                        <button type="submit" class="btn btn-block btn-primary">Filtrar por Stock</button>
                    </div>
                </div>
            </form>

        </div>

        <div class="row" id="products">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">nombre</th>
                            <th scope="col">descripcion</th>
                            <th scope="col">codigo</th>
                            <th scope="col">foto</th>
                            <th scope="col">precio</th>
                            <th scope="col">stock</th>
                            <th scope="col">Accion</th>
                        </tr>
                    </thead>
                    <tbody>

                    {{#each products}}

                        <tr>

                            <th scope="row">{{id}}{{prodId}}</th>
                            <td>{{nombre}}</td>
                            <td>{{descripcion}}</td>
                            <td>{{codigo}}</td>
                            {{#if foto}}
                            <td><img class="card-img-top" src={{{foto}}} alt="Card image cap" /></td>
                            {{/if}}
                            <td>{{precio}}</td>
                            <td>{{stock}}</td>
                            <td>
                                <form action="/carrito/agregar" method="post" role="form">
                                    <td>
                                        <input type="hidden" class="form-control" type="number" name="id" value={{{id}}} >
                                        <input type="hidden" class="form-control" type="number" name="prodId" value={{prodId}} >
                                        <input type="hidden" name="form" value="1" />
                                        <button type="submit" class="form-control">Agregar al Carrito</button>
                                    </td>
                                </form>
                            </td>
                            <td>
                                <a href="/productos/listar/{{{id}}}"> Ver Detalle del producto </a>
                            </td>
                            <td>
                                <form action="/productos/borrar/{{{id}}}?id={{{id}}}" method="delete" role="form">
                                    {{!-- <input type="hidden" class="form-control" type="number" name="id" value={{{id}}} > --}}
                                    <button id='borrar-producto' type="submit" class="form-control">Eliminar Producto</button>
                                </form>
                                <form action="/productos/actualizar/{{{id}}}?id={{{id}}}" method="put" role="form">
                                    <button id='actualizar-producto' type="submit" class="form-control">Actualizar Producto</button>
                                    <p>Id</p>
                                    <input class="form-control" type="text" name="id" value={{{id}}} >
                                    <p>Nombre</p>
                                    <input class="form-control" type="text" name="nombre" value={{{nombre}}} >
                                    <p>Descripcion</p>
                                    <input class="form-control" type="text" name="descripcion" value={{{descripcion}}} >
                                    <p>Código</p>
                                    <input class="form-control" type="text" name="codigo" value={{{codigo}}} >
                                    <p>Foto</p>
                                    <input class="form-control" type="text" name="foto" value={{{foto}}} >
                                    <p>Precio</p>
                                    <input class="form-control" type="text" name="precio" value={{{precio}}} >
                                    <p>Stock</p>
                                    <input class="form-control" type="text" name="stock" value={{{stock}}} >
                                </form>
                            </td>
                        </tr>

                    {{/each}}

                    </tbody>
                </table>
        </div>
    </div>
{{else}}
    <p>No hay productos</p>
{{/if}}
