{{#if user}}  

    <div class="form-group">

        <label>Bievenido! {{user.username}}</label>

        <div id="user-profile-2" class="user-profile">
                <div class="tabbable">
                    <ul class="nav nav-tabs padding-18">
                        <li class="active">
                            <a data-toggle="tab" href="#home">
                                <i class="green ace-icon fa fa-user bigger-120"></i>
                                Profile
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content no-border padding-24">
                        <div id="home" class="tab-pane in active">

                            <div class="row">

                                <div class="col-xs-12 col-sm-3 center">
                                    <span class="profile-picture">
                                        <img class="editable img-responsive" alt=" Avatar" id="avatar2" src={{{user.foto}}}>
                                    </span>

                                    <div class="space space-4"></div>

                                </div><!-- /.col -->

                                <div class="col-xs-12 col-sm-9">


                                    <div class="profile-user-info">
                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Nombre Completo </div>

                                            <div class="profile-info-value">
                                                <span>{{user.username}}</span>
                                            </div>
                                        </div>
                                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Email </div>

                                            <div class="profile-info-value">
                                                <span>{{user.email}}</span>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="hr hr-8 dotted"></div>

                                    <div class="profile-user-info"></div>
                    
                                </div><!-- /.col -->

                            </div><!-- /.row -->

                        </div><!-- /#home -->
                    </div>
            
                </div>
        </div>

        <form action="/logout" method="get" class="form-horizontal" role="form">
            <div class="form-group last" style="margin-bottom:0px;">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="hidden" name="form" value="1" />
                <button type="submit" class="btn btn-success btn-sm">
                Desloguearse
                </button>
            </div>
            </div>
        </form>

    </div>
{{else}}

    <div class="form-group">
        <label>Usuario no Logeado</label>
    </div>

{{/if}}

{{#if userNombre}} 
    <div class="container-fluid mt-3">
        <h1>Chat</h1>
        <hr>
    


        {{#if menssagesFiltrados}}

            {{#each menssagesFiltrados}}
                <div>
                    {{#if administrador}}
                        <strong style="color:rgb(255,0,0);"> {{this.author}} </strong>:
                    {{else}}
                        <strong style="color:rgb(0,0,255);"> {{this.author}} </strong>:
                    {{/if}}
                    <em style="color:rgb(0,143,57);"> {{this.text}} </em>
                    <strong> {{this.date}} </strong>
                </div>
            {{/each}}

        {{else}}
            <div id="messages"></div>
        {{/if}}
    
        <h1> - </h1>

        <form action="/chat/responder" method="post" >
            <tr>              
                <input type="text" id="usuario-respuesta" name="usuariorespuesta" class="form-control my-2 mr-2" placeholder="Usuario al que se le responderá">
            </tr>
            <input class="btn btn-primary my-2" type="submit" value="Elegir usuario">
        </form>
        <form class="form-inline" onsubmit="return addMessage(this)" autocomplete="off">
            <tr>
                <strong style="color:rgb(255, 0, 0);">Escribir como usuario Administrador</strong>
                    {{!-- <input type="hidden" name="form" value="1" /> --}}
                <input type="hidden" type="text" id="username" class="form-control my-2 mr-2" placeholder="Tu Nombre" value="Administrador">
            </tr>
            <tr>              
                <input type="text" id="texto" class="form-control my-2 mr-2" placeholder="Cuéntanos algo...">
            </tr>
            <input class="btn btn-primary my-2" type="submit" value="Enviar!">
        </form>
        
    </div>
{{else}}

{{/if}}

